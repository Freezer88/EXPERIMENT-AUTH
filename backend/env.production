# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://production-db-url-here

# JWT Configuration
JWT_SECRET=production-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=24h

# OpenAI Configuration
OPENAI_API_KEY=your-production-openai-key-here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_live_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# File Storage Configuration
FILE_STORAGE_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/heic,application/pdf

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Server Configuration
PORT=3001
CORS_ORIGIN=https://your-production-domain.com

# AI Processing Configuration
AI_PROCESSING_TIMEOUT=300000
AI_MAX_CONCURRENT_REQUESTS=10

# Malware Scanning (ClamAV API)
CLAMAV_API_URL=https://api.clamav.net
CLAMAV_API_KEY=your-production-clamav-api-key

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password

# Redis Configuration (for caching and queues)
REDIS_URL=redis://your-production-redis-url:6379

# Monitoring Configuration
SENTRY_DSN=your-production-sentry-dsn

# SSL/TLS Configuration
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30 